{
	"name": "jwt-smith",
	"version": "1.0.1",
	"description": "Enhanced JWT Authentication and Authorization Module",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"private": false,
	"files": [
		"dist"
	],
	"scripts": {
		"build": "npm run lint:package && tsup src/index.ts --format cjs,esm --dts",
		"postbuild": "cp README.md LICENSE.md dist/",
		"format": "prettier --ignore-unknown --write .",
		"format:check": "prettier --check .",
		"lint:all": "eslint . --ignore-pattern 'dist/*' --ignore-pattern '*/**/**.mjs'",
		"lint:package": "eslint . --ignore-pattern 'dist/*' --ignore-pattern '*/**/**.mjs' --ignore-pattern 'playground/*' --ignore-pattern 'test/*'",
		"lint:playground": "eslint . --ignore-pattern 'dist/*' --ignore-pattern '*/**/**.mjs' --ignore-pattern 'src/*' --ignore-pattern 'test/*'",
		"prepare": "husky",
		"release:notes": "changeset",
		"release:prepare": "changeset version",
		"release": "npm run build && changeset publish",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage"
	},
	"keywords": [
		"jwt",
		"authentication",
		"authorization",
		"token",
		"refresh-token",
		"jsonwebtoken",
		"jwt-auth",
		"jwt-middleware",
		"token-management",
		"jwt-verification",
		"nodejs",
		"typescript",
		"express-middleware",
		"security",
		"auth",
		"access-control",
		"rbac",
		"jsonwebtoken-utils",
		"secure-jwt"
	],
	"author": {
		"name": "N D K Ariyasena",
		"email": "ndkariyasena@gmail.com",
		"url": "https://jwt-smith.ndkariyasena.com"
	},
	"license": "MIT",
	"dependencies": {
		"express": "^5.2.1",
		"joi": "^17.13.3",
		"jsonwebtoken": "9.0.2"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.9",
		"@eslint/js": "^9.13.0",
		"@types/eslint__js": "^8.42.3",
		"@types/express": "^5.0.0",
		"@types/jest": "^29.5.14",
		"@types/jsonwebtoken": "^9.0.7",
		"eslint": "^9.13.0",
		"husky": "^9.1.6",
		"jest": "^29.7.0",
		"lint-staged": "^15.2.10",
		"prettier": "3.3.3",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"tsup": "^8.3.5",
		"typescript": "^5.6.3",
		"typescript-eslint": "^8.12.2"
	},
	"lint-staged": {
		"*.{js,css,md}": "prettier --ignore-unknown --write",
		"*.{ts,tsx}": "eslint --fix"
	},
	"tsup": {
		"entry": [
			"src/index.ts",
			"!playground/**"
		],
		"splitting": false,
		"sourcemap": true,
		"clean": true
	},
	"engines": {
		"node": ">=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ndkariyasena/jwt-smith.git"
	},
	"bugs": {
		"url": "https://github.com/ndkariyasena/jwt-smith/issues"
	},
	"tickets": {
		"url": "https://github.com/users/ndkariyasena/projects/6"
	},
	"homepage": "https://jwt-smith.ndkariyasena.com",
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
